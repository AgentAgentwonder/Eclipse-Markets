{
  "name": "eclipse-market-trading",
  "version": "1.0.0",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build-renderer": "vite build",
    "build": "npm run build-renderer && electron-builder --win nsis",
    "package:win": "electron-builder --win nsis",
    "rebuild": "npm rebuild --runtime=electron --target=26.0.0 --disturl=https://electronjs.org/headers",
    "lint": "eslint . --ext .js,.jsx",
    "test": "jest --runInBand --coverage --detectOpenHandles",
	"dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
	"dev:renderer": "cd renderer && npm run dev"

  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "auto-launch": "^5.0.6",
    "better-sqlite3": "^9.4.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.6.2",
    "libsodium-wrappers": "^0.7.13",
    "lucide-react": "^0.546.0",
    "node-fetch": "3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "recharts": "^3.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.2.1",
    "babel-jest": "^29.7.0",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.4",
    "framer-motion": "^10.18.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "vite": "^6.4.0"
  },
  "build": {
    "appId": "com.eclipse.markettrading",
    "productName": "Eclipse Market Trading",
    "asar": true,
    "npmRebuild": true,
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "build/**",
      "main.js",
      "package.json",
      "node_modules/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "AgentAgentwonder",
        "repo": "Eclipse-Markets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
